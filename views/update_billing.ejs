<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title> Update Billing</title>
        <!-- my css -->
        <link rel="stylesheet" href="/stylesheets/style.css">
        <!-- bootstrap css -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>

    <body>
        <!-- nav bar -->
        <div class="container-fullwidth customNav"> 
			  <ul class="nav justify-content-center">
          <li class="nav-item">
            <a class="nav-link" id="customLink" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="customLink" href="#">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="customLink" href="#">Contact Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="customLink" href="#">FAQs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="customLink" href="#">Help</a>
          </li>
			  </ul>
		</div>



    <div class="container-fullwidth main">
      <div class="row">
        <div class="container-fullwidth title">
          <h1> Update Bill: <%=Bill_id%></h1>
        </div>
        
        <% if(error) { %>
            <p class="error">Error: <%= error %></p>
        <% } %>
        <div class="container-fullwidth">
          <div class="row">

            <form action="/billing/update" method="post">
              <input type="hidden" name="Bill_id" value="<%= Bill_id %>" />
              <label for="newCard_num">Card Number </label>
              <input type="text" name="newCard_num" />
              <br>
              <label for="newExpiry">Expiry</label>
              <input type="text" name="newExpiry" />
              <br>
              <label for="newSec_code">Security Code</label>
              <input type="text" name="newSec_code" />
              <br>
              <button class="customBtn" type="submit">Update</button>
            </form>

          </div>
        </div>
        
      </div>
    </div>
    
    <div class="container-fullwidth pageBottom">
    </div>


  </body>
</html>
