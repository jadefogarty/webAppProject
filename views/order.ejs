<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title><%= title %></title>
        <!-- my css -->
		<link rel="stylesheet" href="/stylesheets/style.css">
        <!-- bootstrap css -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <!-- nav bar -->
        <div class="container-fullwidth customNav"> 
			<ul class="nav justify-content-center">
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="/">Home</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">Products</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">Contact Us</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">FAQs</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">Help</a>
			  </li>
			</ul>
		</div>


     

        <!-- main -->
        <div class="container-fullwidth main"> 
			<div class="row">
        <div class="container-fullwidth title">
          <h1> <%= title %> </h1> 
        </div>
                <div class="col customCol">
                    
                    
                    <!-- add -->
                    <h3> Add Order To Table</h3>
                    <form action="/order/add" method="post">
                        <label for="Order_id">Order ID</label>
                        <input type="text" name="Order_id" /> 
                        <br>
                        <label for="Cust_id">Customer ID </label>
                        <input type="text" name="Cust_id" />
                        <br>
                        <label for="Cont_id">Content ID</label>
                        <input type="text" name="Cont_id" />
                        <br>
                        <button class="customBtn" type="submit"> Add</button>
                    </form>

                   
        
                   <!-- delete-->
                    <h3> Delete From Table By ID</h3>
                    <form action="/order/delete" method="get">
                        <label for="Order_id">Order ID</label>
                        <input type="text" name="Order_id" /> 
                        <br>
                        <button class="customBtn" type="submit"> Delete</button>
                    </form>

                </div>

                <!-- view -->
                <div class="col customCol">
                  <h3> View Table</h3>
                    <% for (var i=0; i<viewOrder.length; i++) { %>
                        <p> Order ID: <%= viewOrder[i].Order_id %> </p>
                        
                        <table> 
                          <tr>
                            <th> Customer ID</th>
                            <th> Content ID</th>
                            <th> </th>
                          </tr>
                          
                          <tr>
                            <td> <%= viewOrder[i].Cust_id %></td>
                            <td> <%= viewOrder[i].Cont_id %> </td>
                            <td>
                              <!--update-->
                              <form action="/order/update" method="get">
                                  <input type="hidden" name="Order_id" value="<%= viewOrder[i].Order_id %>" />
                                  <button class="customBtn" type="submit"> Edit </button>
                              </form>
                            </td>
                          </tr>
                        </table>
                      <br />
                    <% } %>
                </div>

                <div class="break">
                </div>
                
                <!-- to go to another page-->
                <div class="container-fullwidth">
					<h2> Select a table </h2>
					<ul> 
						<li> <a id="customLink" href="/order"> Orders </a> </li>
						<li> <a id="customLink" href="/customer"> Customers </a> </li>
						<li> <a id="customLink" href="/billing"> Billing </a> </li>
						<li> <a id="customLink" href="/contents"> Contents </a> </li>
						<li> <a id="customLink" href="/item"> Item </a> </li>
					</ul>
				</div>			
         
                                        
            </div>        
        </div>
        
    </body>
</html>