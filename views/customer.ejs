<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title><%= title %></title>
        <!-- my css -->
		<link rel="stylesheet" href="/stylesheets/style.css">
        <!-- bootstrap css -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <!-- nav bar -->
        <div class="container-fullwidth customNav"> 
			<ul class="nav justify-content-center">
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="/">Home</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">Products</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">Contact Us</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">FAQs</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">Help</a>
			  </li>
			</ul>
		</div>


      

        <!-- main -->
        <div class="container-fullwidth main"> 
			<div class="row">
        <div class="container-fullwidth title">
          <h1> <%= title %> </h1> 
        </div>
                <div class="col customCol">
                  
                    
                    <!-- add -->
                    <h2> Add Customer To Table</h2>
                    <form action="/customer/add" method="post">
                        <label for="Cust_id">Customer ID</label>
                        <input type="text" name="Cust_id" /> 
                        <br>
                        <label for="C_name"> Name</label>
                        <input type="text" name="C_name" />
                        <br>
                        <label for="C_address"> Address</label>
                        <input type="text" name="C_address" />
                        <br>
                        <label for="C_city"> City</label>
                        <input type="text" name="C_city" />
                        <br>
                        <label for="C_country"> Country</label>
                        <input type="text" name="C_country" />
                        <br>
                        <label for="Bill_id"> Bill ID</label>
                        <input type="text" name="Bill_id" />
                        <br>
                        <label for="Telephone"> Telephone</label>
                        <input type="text" name="Telephone" />
                        <br>
                        <button class="customBtn" type="submit"> Add </button>
                    </form>

                    
        
                   <!-- delete-->
                    <h2> Delete From Table By ID Or Name </h2>
                    <form action="/customer/delete" method="get">
                        <label for="Cust_id">Customer ID</label>
                        <input type="text" name="Cust_id" /> 
                        <br>
                        <label for="C_name">Name</label>
                        <input type="text" name="C_name" /> 
                        <br>
                        <button class="customBtn" type="submit"> Delete</button>
                    </form>

                </div>

                <!-- view -->
                <div class="col customCol">
                  <h2> View Table</h2>
                    <% for (var i=0; i<viewCustomer.length; i++) { %>
                        <p>Customer ID: <%= viewCustomer[i].Cust_id %></p>
                        
                        <table> 
                          <tr>
                            <th> Name</th>
                            <th> Address</th>
                            <th> City</th>
                            <th> Country</th>
                            <th> Bill ID</th>
                            <th> Telephone</th>
                          </tr>
                          
                          <tr>
                            <td> <%= viewCustomer[i].C_name %> </td> 
                            <td> <%= viewCustomer[i].C_address %> </td>
                            <td> <%= viewCustomer[i].C_city %> </td>
                            <td> <%= viewCustomer[i].C_country %></td>
                            <td> <%= viewCustomer[i].Bill_id %></td>
                            <td> <%= viewCustomer[i].Telephone %></td>
                            <td>
                              <!--update-->
                              <form action="/customer/update" method="get">
                                  <input type="hidden" name="Cust_id" value="<%= viewCustomer[i].Cust_id %>" />
                                  <button class="customBtn" type="submit"> Edit </button>
                              </form>
                            </td>
                          </tr>  
                        </table>
                        <br />

                    <% } %>
                </div>

                <div class="break">
                </div>
                
                <!-- to go to another page-->
                <div class="container-fullwidth">
					<h2> Select a table </h2>
					<ul> 
						<li> <a id="customLink" href="/order"> Orders </a> </li>
						<li> <a id="customLink" href="/customer"> Customers </a> </li>
						<li> <a id="customLink" href="/billing"> Billing </a> </li>
						<li> <a id="customLink" href="/contents"> Contents </a> </li>
						<li> <a id="customLink" href="/item"> Item </a> </li>
					</ul>
				</div>			
         
                                        
            </div>        
        </div>
        
    </body>
</html>