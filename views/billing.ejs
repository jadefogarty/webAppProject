<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title><%= title %></title>
        <!-- my css -->
		<link rel="stylesheet" href="/stylesheets/style.css">
        <!-- bootstrap css -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <!-- nav bar -->
        <div class="container-fullwidth customNav"> 
			<ul class="nav justify-content-center">
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="/">Home</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">Products</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">Contact Us</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">FAQs</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" id="customLink" href="#">Help</a>
			  </li>
			</ul>
		</div>


       

        <!-- main -->
        <div class="container-fullwidth main"> 
          <div class="row">
        <div class="container-fullwidth title">
          <h1> <%= title %> </h1> 
        </div>
                <div class="col customCol">
                    
                    
                    <!-- add -->
                    <h3> Add Bill To Table</h3>
                    <form action="/billing/add" method="post">
                        <label for="Bill_id">Bill ID</label>
                        <input type="text" name="Bill_id" /> 
                        <br>
                        <label for="Card_num">Card Number</label>
                        <input type="text" name="Card_num" />
                        <br>
                        <label for="Expiry">Expiry</label>
                        <input type="text" name="Expiry" />
                        <br>
                        <label for="Sec_code">Security Code</label>
                        <input type="text" name="Sec_code" />
                        <br>
                        <button class="customBtn" type="submit"> Add </button>
                    </form>

                   
                   <!-- delete-->
                    <h3> Delete From Table By ID </h3>
                    <form action="/billing/delete" method="get">
                        <label for="Bill_id">Bill ID</label>
                        <input type="text" name="Bill_id" /> 
                        <br>
                        <button class="customBtn" type="submit"> Delete</button>
                    </form>

                </div>

                <!-- view -->
                <div class="col customCol">
                  <h3> View Table</h3>
                    <% for (var i=0; i<viewBilling.length; i++) { %>
                        <p> Billing ID: <%= viewBilling[i].Bill_id %></p>
                        
                        <table> 
                          <tr>
                            <th> Card Number</th>
                            <th> Expiry</th>
                            <th> Security Code</th>
                          </tr>
                          
                          <tr>
                            <td> <%= viewBilling[i].Card_num %> </td> 
                            <td> <%= viewBilling[i].Expiry %> </td>
                            <td> <%= viewBilling[i].Sec_code %> </td>
                            <td>
                              <!--update-->
                              <form action="/billing/update" method="get">
                                  <input type="hidden" name="Bill_id" value="<%= viewBilling[i].Bill_id %>" />
                                  <button class="customBtn" type="submit"> Edit </button>
                              </form>
                            </td>
                          </tr>
                        </table>
                      <br />
                    <% } %>
                </div>
               

                <div class="break">
                </div>
                
                <!-- to go to another page-->
                <div class="container-fullwidth">
					<h2> Select a table </h2>
					<ul> 
						<li> <a id="customLink" href="/order"> Orders </a> </li>
						<li> <a id="customLink" href="/customer"> Customers </a> </li>
						<li> <a id="customLink" href="/billing"> Billing </a> </li>
						<li> <a id="customLink" href="/contents"> Contents </a> </li>
						<li> <a id="customLink" href="/item"> Item </a> </li>
					</ul>
				</div>			
         
                                        
            </div>        
        </div>
        
    </body>
</html>